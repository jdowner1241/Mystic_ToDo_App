<Window x:Class="Mystic_ToDo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mystic_ToDo"
        xmlns:header="clr-namespace:Mystic_ToDo.View.UserControls.Header"
        xmlns:customControls="clr-namespace:Mystic_ToDo.View.UserControls.CustomControls"
        xmlns:reminderPage="clr-namespace:Mystic_ToDo.View.UserControls.Content.Reminder"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        
        <!-- MenuBar -->
        <header:MenuBar Grid.Row="0"/>

        <!-- Content Section -->
        <Grid Grid.Row="1">
            <reminderPage:ReminderPage Grid.Row="0"/>
            
        </Grid>

        <!-- Footer -->
        <Rectangle Grid.Row="2" Fill="Gold"/>

    </Grid>
</Window>
