<Window x:Class="Mystic_ToDo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mystic_ToDo"
        xmlns:header="clr-namespace:Mystic_ToDo.View.UserControls.Header"
        xmlns:customControls="clr-namespace:Mystic_ToDo.View.UserControls.CustomControls"
        xmlns:reminderPage="clr-namespace:Mystic_ToDo.View.UserControls.Content.Reminder"
        xmlns:LoginPage="clr-namespace:Mystic_ToDo.View.UserControls.Content.LoginPage"
        mc:Ignorable="d"
        Title="Mystic ToDo" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!-- MenuBar  -->
        <header:MenuBar x:Name="Menubar" Grid.Row="0"/>

        

        <!-- Content Section -->
        <Grid Grid.Row="1" x:Name="CurrentPage">
             
  
        </Grid> 
        

        <!-- Footer -->
        <Rectangle Grid.Row="2" Fill="Gold"/>

    </Grid>
</Window>
