<UserControl x:Class="Mystic_ToDo.View.UserControls.Content.Reminder.ReminderContent.SortItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mystic_ToDo.View.UserControls.Content.Reminder.ReminderContent"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">

    <Border BorderBrush="Black" BorderThickness="1" Margin="5, 2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.60*"/>
                <ColumnDefinition Width="0.40*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <ComboBox x:Name="columnComboBox" Grid.Column="0" Margin="10, 10"/>

            <ComboBox x:Name="orderComboBox" Grid.Column="1" Margin="10, 10">
                <ComboBoxItem Content="Ascend"/>
                <ComboBoxItem Content="Descend"/>
            </ComboBox>

            <Button x:Name="removeButton" Grid.Column="2" Margin="5, 10" Content="X" Foreground="red"/>


        </Grid>
    </Border>
    
</UserControl>
