<UserControl x:Class="Mystic_ToDo.View.UserControls.CustomControls.MenuBarButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mystic_ToDo.View.UserControls.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250">


    <Grid Background="Transparent">
        <Button  x:Name="menuButton" BorderThickness="1" Background="Silver" Content="{Binding Placeholder}"
                 FontSize="15" Foreground="black" FontStyle="Italic" FontWeight="Bold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
        </Button>
    </Grid>
   
 
</UserControl>
