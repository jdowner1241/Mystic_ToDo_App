<UserControl x:Class="Mystic_ToDo.View.UserControls.Header.MenuBarWithoutSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mystic_ToDo.View.UserControls.Header"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="800">
    <Grid>
        <!-- File menu -->
        <Menu Grid.Row="0" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Import Settings..."/>
                <MenuItem Header="Export Settings..."/>
                <MenuItem Header="Exit..."/>
            </MenuItem>

            <MenuItem Header="Edit">
                <MenuItem Header="Select..."/>
                <MenuItem Header="Select All..."/>
                <MenuItem Header="Deselect..."/>
                <MenuItem Header="Copy..."/>
                <MenuItem Header="Cut..."/>
                <MenuItem Header="Paste..."/>
            </MenuItem>

            <MenuItem Header="Settings">
                <MenuItem Header="General..."/>
                <MenuItem Header="Appearance..."/>
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
